<div class="container">
	<div class="mycard padded">
    <h1 class="text-center">Sign In</h1>
		<p class="text-center">Welcome back! Let's get it poppin'.</p>
		<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		  <div class="form-inputs">
		  	<div class="form-group">
		    	<%= f.label :email %>
		    	<%= f.email_field :email, required: false, class: "form-control", autofocus: true %>
	    	</div>
		    <div class="form-group">
		    	<%= f.label :password %>
		    	<%= f.password_field :password, required: false, class: "form-control" %>
		    </div>
		    <div class="form-group text-center">
		    	<%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
		    </div>
		  </div>

		  <div class="form-actions text-center">
		    <%= f.button :submit, "Log in", class: "btn-outline-danger submit-form" %><br>
		    <%= render "devise/shared/links" %>
		  </div>
		<% end %>
	</div> <!-- card padded -->
</div> <!-- page container -->

<%= content_for :additional_js do %>
  <script type="text/javascript">
	  $(document).ready(function() {
	    $('.submit-form').click(function() {
	        ga('send', 'event', 'Accounts', 'Log In', 'Submit New Session Login Form');
	    });
	  });
	</script>
<% end %>
