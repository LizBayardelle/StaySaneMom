<div class="container">
	<div class="mycard padded">
    <h1 class="text-center">Forgot Your Password?</h1>
		<p class="text-center">Don't worry.  We've got you.</p>
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <div class="form-group">
		    	<%= f.label :email %>
		    	<%= f.email_field :email, required: false, class: "form-control", autofocus: true %>
	    	</div>
      </div>

      <div class="form-actions text-center">
        <%= f.button :submit, "Send Reset Instructions", class: "btn-outline-danger"%><br />
        <%= render "devise/shared/links" %>
      </div>
    <% end %>

	</div> <!-- card padded -->
</div> <!-- page container -->
