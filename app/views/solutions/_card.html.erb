<div class="col-sm-6 col-lg-4">
  <div class="card hoverable mb-4">
    <div class="card-body text-center">
      <div class="row align-items-center">
        <div class="col-12">
          <a href="<%= solution.link %>" target="_blank">
            <% if solution.image.attached? %>
              <%= image_tag rails_blob_url(solution.image), style: "max-width: 100%" %>
            <% end %>
          </a>
        </div>
        <div class="col-12 p-bottom-margin">
          <h3 class="color-pink"><a href="" target="_blank"><%= solution.name %></a><h3>
          <p class="lh-1"><small><%= simple_format(solution.description) %></small></p>
          <button type="button" class="btn btn-pink btn-lg" data-toggle="modal" data-target="#modal<%= solution.id %>">
            <%= number_to_currency(solution.price) %>
          </button>
          <% if current_user && current_user.admin %>
            <p><small>
              <%= link_to 'Edit', edit_solution_path(solution) %>
              &nbsp;&nbsp;|&nbsp;&nbsp;
              <%= link_to 'Destroy', solution, method: :delete, data: { confirm: 'Are you sure?' } %>
            </small></p>
          <% end %>
        </div>
      </div>
    </div> <!-- col -->
  </div> <!-- row -->
</div>



<!-- Modal -->
<div class="modal fade" id="modal<%= solution.id %>" tabindex="-1" role="dialog" aria-labelledby="modal<%= solution.id %>Label" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modal<%= solution.id %>Label"><%= solution.name %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= solution.link.html_safe %>
      </div>
    </div>
  </div>
</div>
