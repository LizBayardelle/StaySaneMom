
<%= simple_form_for(@solution) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs row">
    <div class="col-12">
      <%= f.input :name %>
    </div> <!-- col -->
    <div class="col-sm-6">
      <%= f.input :price %>
    </div> <!-- col -->
    <div class="col-sm-6">
      <label>Display On Website</label>
      <%= f.input :active %>
    </div> <!-- col -->
    <div class="col-sm-4 form-group">
      <%= f.label "Product Mockup" %><br />
      <%= f.file_field :image %>
    </div>
    <div class="col-sm-4 form-group">
      <%= f.label "FB Share Image" %><br />
      <%= f.file_field :fb_share_image %>
    </div>
    <div class="col-sm-4 form-group">
      <%= f.label "Pinterest Images" %><br />
      <%= f.file_field :pin_image, multiple: true %>
    </div>

    <div class="col-6">
      <%= f.input :description, input_html: { rows: 5 } %>
      </div> <!-- col -->
    <div class="col-sm-6">
      <%= f.input :link, label: "Thrivecart Link", input_html: { rows: 5 } %>
    </div> <!-- col -->

    <div class="col-12 form-group form-check jsItUp">
      <h5>Categories</h5>
      <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name ) %>
    </div>

    
  </div>

  <div class="form-actions text-center">
    <%= f.button :submit, class: "btn btn-pink" %>
  </div>
<% end %>



<%= content_for :additional_js_partial do %>

  <script type="text/javascript">
    $(document).ready(function() {
      $(".jsItUp input").addClass("form-check-input");
      $(".jsItUp label").addClass("form-check-label");
    });
  </script>
<% end %>