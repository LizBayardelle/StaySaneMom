<!-- page-specific content -->
  <% title @freebie.name %>


  <%= content_for :head do %>
    <% description = @freebie.main_subheading %>
    <meta name="description" content="<%= description %>" />
    <meta property="og:url" content="<%= request.original_url %>" />
    <meta property="og:title" content="<%= @freebie.name %>" />
    <meta property="og:description" content="<%= description %>" />
    <meta property="og:image" content="<%= rails_blob_url(@freebie.fb_share_image) if @freebie.fb_share_image.attached? %>" />
    <meta property="article:author" content="Liz Bayardelle, PhD" />
    <meta property="og:type" content="product.group" />
  <% end %>



<%= content_for :pinterest do %>
  <script>
    pintrk('track', 'pagevisit', {
    property: 'Freebie Show: <%= @freebie.name %>'
    });
  </script>
<% end %>

<!-- page-specific content -->



<section class="bg-pink p-4 text-center z-depth-3">
  <h2 class="h3 color-white"><%= @freebie.top_question %></h2>
</section>

<section id="hero" class="container py-4">

  <% if current_user && current_user.admin %>
    <div id="adminbuttons" class="text-center">
      <% unless @freebie.active %>
        <h2>INACTIVE</h2>
      <% end %>
      <%= link_to 'Edit Freebie', edit_freebie_path(@freebie), class: "btn btn-grey-light btn-sm" %>
      <%= link_to 'Admin Page', admin_freebies_path, class: "btn btn-grey-light btn-sm" %>
      <%= link_to 'Public Index', freebies_path, class: "btn btn-grey-light btn-sm" %>
    </div>
  <% end %>

  <div class="row py-4">

    <div class="col-12 col-sm-5 text-center pull-sm-7">
      <img src="<%= rails_blob_url(@freebie.sample_image) if @freebie.sample_image.attached? %>" class="product-image">
      <div class="w-100 pt-4">
        <img src="<%= asset_url("Arrow.png") %>" class="pr-5" style="height: 50px">
        <h3 class="font-script color-pink mt-2 text-center text-sm-left">Free <%= @freebie.name %></h3>
      </div>
    </div> <!-- col -->

    <div class="col-12 col-sm-7 text-center text-sm-left push-sm-5">
      <h1 class="thin h2 uppercase color-pink"><%= @freebie.main_heading %></h1>
      <h3 class="bold landing-subheading"><%= simple_format(@freebie.main_subheading) %></h3>
      <% if @freebie.thrivelink && @freebie.thrivelink != "" %>
        <%= @freebie.thrivelink.html_safe %>
      <% elsif @freebie.ml_id && @freebie.ml_id != "" %>
        <%= render partial: "freebies/mlform", locals: { freebie: @freebie } %>
      <% end %>
    </div> <!-- col -->



  </div> <!-- row -->
</section>


<% if @freebie.t1_long != "" %>
  <section class="bg-pink py-5 z-depth-3-y">
    <div class="container">
      <div class="row">
        <div class="col-12 text-center pb-4">
          <h2 class="color-white boldest">"<%= @freebie.t1_short %>"</h2>
        </div>
        <div class="col-sm-3 text-center">
          <div class="image-cropper mb-3" style="display: block; margin-left: auto; margin-right: auto">
            <img src="<%= rails_blob_url(@freebie.t1_image) if @freebie.t1_image.attached? %>" class="rounded">
          </div>
          <p class="color-white boldest mb-0"><%= @freebie.t1_name %></p>
          <p style="line-height: 1" class="color-white"><small><em><%= @freebie.t1_title %></em></small></p>
        </div> <!-- col -->
        <div class="col-sm-9">
          <p class="boldest color-white">"<%= @freebie.t1_long %>"</p>
        </div> <!-- col -->
      </div> <!-- row -->
    </div> <!-- container -->
  </section>
<% end %>

<section id="pain-points" class="container pt-5">
  <div class="text-center">
    <h2><%= @freebie.outcome %></h2>
    <img src="<%= rails_blob_url(@freebie.image) if @freebie.image.attached? %>" class="my-3" style="max-width: 80%; max-height: 30vh;">
  </div>

  <% if @freebie.wyg1 != "" %>
    <div class="outline-box z-depth-3">
      <h3 class="text-center boldest pb-2 mt-2">Here's what you get...</h3>
      <ul class="checkmarks">
        <li><%= @freebie.wyg1 %></li>
        <li><%= @freebie.wyg2 %></li>
        <li><%= @freebie.wyg3 %></li>
      </ul>
    </div>
  <% end %>

  <h2 class="text-center pt-5"><%= @freebie.outcome_2 %></h2>

  <div class="text-center bottom-link pt-3">
    <% if @freebie.thrivelink && @freebie.thrivelink != "" %>
      <%= @freebie.thrivelink.html_safe %>
    <% elsif @freebie.ml_id && @freebie.ml_id != "" %>
      <section class="w-75 w-sm-50 mx-auto z-depth-3 px-5 pt-5 pb-3 text-center">
        <h3 class="h1 pb-3">Get the Goods</h3>
        <%= render partial: "freebies/mlform", locals: { freebie: @freebie } %>
      </section>
    <% else %>
      <section id="ck-embed" class="py-3">
        <%= @freebie.convertkit_url.html_safe %>
      </section>
    <% end %>
  </div>
</section>




<% if @freebie.pin_image.attached? %>
  <section id="pins" class="mt-5 bg-white z-depth-2-y py-5 text-center">
    <h2 class="display-2 color-pink font-script mb-0">Save It, Share It</h2>
    <div class="pinterest-image row padded pin-image-stripe">
      <div class="container">
        <% @freebie.pin_image.each do |image| %>
          <%= image_tag url_for(image)%>
        <% end %>
      </div>
    </div>
  </section>
<% end %>





  <h3 class="text-center py-5"><%= link_to 'Not for you?<br>Check out our&nbsp;other&nbsp;free&nbsp;stuff!'.html_safe, freebies_path, class: "thin uppercase color-grey" %></h3>

</div>
