
<%= simple_form_for(@freebie) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <h2 class="text-center mt-5 thin uppercase color-pink">The Basics</h2>
    <%= f.input :name %>
    <%= f.input :short_description %>
    <%= f.input :thrivelink, label: "Thrivecart Popup Code" %>

    
    <div class="form-group form-check jsItUp">
      <h5>Categories</h5>
      <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name ) %>
    </div>

    <%= f.input :active %>

    <h2 class="text-center mt-5 thin uppercase color-pink">Sales Jargon</h2>
    <%= f.input :top_question %>
    <%= f.input :main_heading %>
    <%= f.input :main_subheading, as: :text %>
    <%= f.input :outcome %>
    <%= f.input :outcome_2, label: "Final Outcome" %>


    <h2 class="text-center mt-5 thin uppercase color-pink">Testimonial</h2>
    <%= f.input :t1_short, label: "Short Blurb" %>
    <%= f.input :t1_long, label: "Full Testimonial" %>
    <%= f.input :t1_name, label: "Person Name" %>
    <%= f.input :t1_title, label: "Person Title" %>
    <div class="form-group">
      <%= f.label "Testimonial Avatar" %><br />
      <%= f.file_field :t1_image %>
    </div>

    <h2 class="text-center mt-5 thin uppercase color-pink">Features</h2>
    <%= f.input :wyg1, label: "What you get... (Feature #1)" %>
    <%= f.input :wyg2, label: "What you get... (Feature #2)" %>
    <%= f.input :wyg3, label: "What you get... (Feature #3)" %>


    <h2 class="text-center mt-5 thin uppercase color-pink">Images</h2>
    <div class="row">
      <div class="col-sm-3 form-group">
        <%= f.label "Mockup Image" %><br />
        <%= f.file_field :image %>
      </div>
      <div class="col-sm-3 form-group">
        <%= f.label "Sample Page" %><br />
        <%= f.file_field :sample_image %>
      </div>
      <div class="col-sm-3 form-group">
        <%= f.label "FB Share Image" %><br />
        <%= f.file_field :fb_share_image %>
      </div>
      <div class="col-sm-3 form-group">
        <%= f.label "Pinterest Images" %><br />
        <%= f.file_field :pin_image, multiple: true %>
      </div>
    </div> <!-- row -->

  </div>

  <div class="form-actions text-center">
    <%= f.button :submit, class: "btn btn-pink" %>
  </div>
<% end %>





<%= content_for :additional_js_partial do %>
  <script type="text/javascript">
    $(document).ready(function() {
      $(".jsItUp input").addClass("form-check-input");
      $(".jsItUp label").addClass("form-check-label");
    });
  </script>
<% end %>
