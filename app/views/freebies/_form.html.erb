
<%= simple_form_for(@freebie) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <h2 class="text-center mt-5 thin uppercase color-pink">The Basics</h2>
    <%= f.input :name %>
    <%= f.input :short_description %>
    <div class="form-group">
      <%= f.input :category, label: "Main Category", input_html: {class: 'browser-default'}, collection: [['House', 'House'], ['Marriage', 'Marriage'], ['Pregnancy', 'Pregnancy'], ['Babies', 'Babies'], ['Toddlers', 'Toddlers'], ['Kids', 'Kids'], ['Teens', 'Teens'], ['Balance', 'Balance']] %>
    </div>
    <%= f.input :active %>

    <h2 class="text-center mt-5 thin uppercase color-pink">Sales Jargon</h2>
    <%= f.input :top_question %>
    <%= f.input :main_heading %>
    <%= f.input :main_subheading, as: :text %>
    <%= f.input :outcome %>
    <%= f.input :outcome_2, label: "Final Outcome" %>


    <h2 class="text-center mt-5 thin uppercase color-pink">Testimonial</h2>
    <%= f.input :t1_short, label: "Short Blurb" %>
    <%= f.input :t1_long, label: "Full Testimonial" %>
    <%= f.input :t1_name, label: "Person Name" %>
    <%= f.input :t1_title, label: "Person Title" %>
    <div class="form-group">
      <%= f.label "Testimonial Avatar" %><br />
      <%= f.file_field :t1_image %>
    </div>

    <h2 class="text-center mt-5 thin uppercase color-pink">Features</h2>
    <%= f.input :wyg1, label: "What you get... (Feature #1)" %>
    <%= f.input :wyg2, label: "What you get... (Feature #2)" %>
    <%= f.input :wyg3, label: "What you get... (Feature #3)" %>

    <h2 class="text-center mt-5 thin uppercase color-pink">Subscribe Info</h2>
    <%= f.input :convertkit_url, as: :string, label: "HTML for ConvertKit Embed" %>
    <%= f.input :ml_id, as: :string, label: "Mailerlite ID (Top Div Tag, e.g. '4302418')" %>
    <%= f.input :ml_submit_code, as: :string, label: "Mailerlite Submit Code (Action in Form Tag, e.g. 'b8s2s0')" %>
    <%= f.input :after_download_url, as: :string, label: "After Download URL (Usually Rebrand.ly)" %>
    <%= f.input :ml_img_track_url, as: :string, label: "Mailerlite Img Tracking URL (Last IMG, e.g. 'https://track.mailerlite.com/webforms...')" %>

    <h2 class="text-center mt-5 thin uppercase color-pink">Images</h2>
    <div class="form-group">
      <%= f.label "Mockup Image" %><br />
      <%= f.file_field :image %>
    </div>
    <div class="form-group">
      <%= f.label "Sample Page" %><br />
      <%= f.file_field :sample_image %>
    </div>

  </div>

  <div class="form-actions text-center">
    <%= f.button :submit, class: "btn btn-pink" %>
  </div>
<% end %>
