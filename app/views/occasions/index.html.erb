<!-- page-specific content -->
  <% title "Gift Planner | SSM" %>
  <%= content_for :head do %>
    <meta name="description" content="It's hard to keep track of the special events, dates to come, and all the other important information about one's 'tribe'." />
  <% end %>
<!-- page-specific content -->

<div class="frame" style="background-image: url(<%= asset_path "gift-planner.jpg" %>)"><div class="image-overlay-neutral"></div></div>
<div class="over-frame-text">
  <h1>Gift Planner</h1>
  <div class="over-frame-bottom-row">
    <div class="container text-center">
      <a href="#newOccasionPopup" class="open-popup-link btn btn-outline-secondary">Create a New Occasion</a>
      <div class="buffer"></div>
    </div> <!-- container -->
  </div> <!-- over-frame-text -->
</div> <!-- over-frame-text -->

<div class="half-buffer"></div>

<div class="container">
</div> <!-- container -->

<!-- new person popup itself -->
<div id="newOccasionPopup" class="white-popup mfp-hide">
  <h2 class="text-center">So what are we planning for?</h2>
  <%= render 'form', occasion: @occasion %>
</div>


<script>
  $(function() {
    $('.blog-text').matchHeight();
  });

  $('.open-popup-link').magnificPopup({
    type:'inline',
    midClick: true // Allow opening popup on middle mouse click. Always set it to true if you don't provide alternative source in href.
  });
</script>


<p id="notice"><%= notice %></p>

<h1>Occasions</h1>

<table>
  <thead>
    <tr>
      <th>Person</th>
      <th>User</th>
      <th>Name</th>
      <th>Date</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @occasions.each do |occasion| %>
      <tr>
        <td><%= occasion.person %></td>
        <td><%= occasion.user %></td>
        <td><%= occasion.name %></td>
        <td><%= occasion.date %></td>
        <td><%= occasion.notes %></td>
        <td><%= link_to 'Show', occasion %></td>
        <td><%= link_to 'Edit', edit_occasion_path(occasion) %></td>
        <td><%= link_to 'Destroy', occasion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Occasion', new_occasion_path %>
