<!-- page-specific content -->
  <% pagetitle = "Recipe Search Database" %>
  <% description = "Bored with literally every meal you know how to cook? Do a quick search on the Spoonacular recipe database and save the yummiest ones to your personal recipe box." %>
  
  <% title pagetitle %>
  <%= content_for :head do %>
    <meta name="description" content="<%= description %>" />
    <meta property="og:url" content="<%= request.original_url %>" />
    <meta property="og:title" content="<% pagetitle %>" />
    <meta property="og:description" content="<%= description %>" />
    <meta property="og:image" content="https://staysanemom.s3.us-west-1.amazonaws.com/111-Share+Images/Recipe+Search+Database.jpeg" />
    <meta property="article:author" content="Liz Bayardelle, PhD" />
    <meta property="og:type" content="product" />
  <% end %>
<!-- page-specific content -->


<div class="container">

  <h1 class="text-center font-script color-pink mt-5 display-1">Find New Recipes</h1>

  <!-- Search form -->
  <div class="active-purple-3 active-purple-4 mb-4">
    <%= form_tag('/recipes/search') do %>
      <input name="search_term[word]" class="form-control" type="text" placeholder="Search for Recipes (press enter to search)" aria-label="Search">
    <% end %>
  </div>
  <!-- Search form -->

  <!-- Results -->
  <div class="row">
    <% if @errors %>
      <%= @errors[:message] %>
    <% else %>
        <% @recipes.each do |recipe| %>
          <div class="col-sm-6 col-md-4">
              <div class="card" style="margin-bottom: 20px">
                <%= image_tag recipe.image, class: 'card-img-top' %>
                <div class="card-body">
                  <h4 class="card-title">
                    <%= link_to recipe_path(recipe.id) do %>
                      <%= recipe.title %>
                    <% end %>
                  </h4>
                  <p class="card-text">Ready in <%= pluralize(recipe.ready_in_minutes, "Minute") %>  |  <%= pluralize(recipe.aggregate_likes, "Likes") %></p>
                  <%= link_to "See Recipe", recipe_path(recipe.id), class: "btn btn-pink" %>
                </div> <!-- card body -->
              </div> <!-- Card -->
          </div> <!-- col -->
        <% end %>
    <% end %>
  </div> <!-- row -->
  <!-- Results -->

</div> <!-- container -->

<%= content_for :additional_js do %>
  <script type="text/javascript">
    $(document).ready(function() {
      $('.card').matchHeight();
      $('.view').matchHeight();
      $('.card-title').matchHeight();
      $('.card-text').matchHeight();
    });
  </script>
<% end %>
