<div class="container">

  <h1 class="text-center font-script">Recipes</h1>

  <!-- Search form -->
  <div class="active-purple-3 active-purple-4 mb-4">
    <input class="form-control" type="text" placeholder="Search for Recipes (press enter to search)" aria-label="Search">
  </div>
  <!-- Search form -->

  <!-- Results -->
  <div class="row">
    <% if @errors %>
      <%= @errors[:message] %>
    <% else %>
      <% @recipes.each_slice(3) do |recipes| %>
        <% d @recipes.each do |recipe| %>
          <div class="col-sm-6 col-md-4">
              <div class="card">
                <%= image_tag recipe.image, class: 'card-img-top' %>
                <div class="card-body">
                  <h4 class="card-title">
                    <%= link_to recipe_path(recipe.id) do %>
                      <%= recipe.title %>
                    <% end %>
                  </h4>
                  <p class="card-text">Ready in <%= pluralize(recipe.ready_in_minutes, "Minute") %>  |  <%= pluralize(recipe.aggregate_likes, "Likes") %></p>
                  <%= link_to "See Recipe", recipe_path(recipe.id), class: "btn btn-danger" %>
                </div> <!-- card body -->
              </div> <!-- Card -->
          </div> <!-- col -->
        <% end %>
      <% end %>
    <% end %>
  </div> <!-- row -->
  <!-- Results -->

</div> <!-- container -->
