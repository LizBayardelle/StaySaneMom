<%= simple_form_for(@blog) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <div class="form-group">
      <%= f.label :category %>
      <%= f.select :category, [['General', 'General'], ['House', 'House'], ['Spouse', 'Spouse'], ['Kids', 'Kids'], ['Self', 'Self'], ['Other', 'Other']] %>
    </div>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :teaser %>
      <%= f.text_area :teaser, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :tag_list %>
      <%= f.text_field :tag_list, value: @blog.tag_list.join(", "), class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, id: "wysiwyg" %>
    </div>
    <div class="row">
      <div class="form-group col-sm-4">
        <%= f.label "Read More CTA" %>
        <%= f.text_field :cta_read_more, class: "form-control" %>
      </div>
      <div class="form-group col-sm-4">
        <%= f.label "CTA for PDF Downloads" %>
        <%= f.text_field :cta_pdf, class: "form-control" %>
      </div>
      <div class="form-group col-sm-4">
        <%= f.label "CTA for Free Video" %>
        <%= f.text_field :cta_video, class: "form-control" %>
      </div>
      <div class="form-group col-sm-4">
        <%= f.label "Linked Module" %>
        <%= f.text_field :linked_module, class: "form-control" %>
      </div>
      <div class="form-group col-sm-4">
        <%= f.label "Convertkit Href" %>
        <%= f.text_field :convertkit_href, class: "form-control" %>
      </div>
      <div class="form-group col-sm-4">
        <%= f.label "Video Link" %>
        <%= f.text_field :video_link, class: "form-control" %>
      </div>
    </div> <!-- row -->
    <div class="form-group">
      <%= f.label "Freebie Filename (Put In Public Folder) or Link (if Type is Link)" %>
      <%= f.text_field :freebie_filename, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label "Freebie Title (Plaintext)" %>
      <%= f.text_field :freebie_description, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label "Freebie Type" %>
      <%= f.select :freebie_type, [['File', 'File'], ['Link', 'Link'], ['None', 'None']] %>
    </div>
    <div class="form-group">
      <%= f.label "Blog Image" %><br />
      <%= f.file_field :image %>
    </div>
    <div class="form-group">
      <%= f.label "Pinterest Image" %><br />
      <%= f.file_field :pin_image, multiple: true %>
    </div>
    <div class="form-group">
      <%= f.label "Pinterest Description" %>
      <%= f.text_area :data_pin_description, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label "Linked PDF" %><br />
      <%= f.file_field :pdf %>
    </div>
    <%= f.hidden_field :published, value: true %>
    <div class="form-group">
      <%= f.label :published_on %>
      <input type="text" class="form-control datepicker" data-datepicker-holder="#dateHolder"/>
      <%= f.hidden_field :published_on, id: "dateHolder", class: "hiddenDateField" %>
    </div> <!-- col -->

  </div>

  <div class="form-actions text-center">
    <%= f.button :submit, class: "btn-outline-danger" %>
  </div>
<% end %>


<!-- script for FROALA-WYSIWYG -->
<script>
  $('#wysiwyg').froalaEditor({
    key: '<%= ENV['FROALA_ACTIVATION_KEY'] %>',
    inlineMode: false,
    heightMin: '200px',
    toolbarButtons: [
        'bold', 'italic', 'underline', 'paragraphFormat', 'formatOL',
        'formatUL', 'insertHTML', 'undo', 'redo', 'html'
      ]
  })
</script>
