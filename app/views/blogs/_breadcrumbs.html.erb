<section id="breadcrumbs" class="mb-5">
    <nav aria-label="breadcrumb" class="nav-breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><%= link_to "Blog", blogs_path %></li>
        <% case @blog.category %>
        <% when "House" %>
          <li class="breadcrumb-item"><%= link_to "House", pages_path("house") %></li>
        <% when "Marriage" %>
          <li class="breadcrumb-item"><%= link_to "Marriage", pages_path("marriage") %></li>
        <% when "Pregnancy" %>
          <li class="breadcrumb-item"><%= link_to "Pregnancy", pages_path("pregnancy") %></li>
        <% when "Babies" %>
          <li class="breadcrumb-item"><%= link_to "Babies", pages_path("babies") %></li>
        <% when "Toddlers" %>
          <li class="breadcrumb-item"><%= link_to "Babies", pages_path("toddlers") %></li>
        <% when "Kids" %>
          <li class="breadcrumb-item"><%= link_to "Kids", pages_path("kids") %></li>
        <% when "Teens" %>
          <li class="breadcrumb-item"><%= link_to "Babies", pages_path("teens") %></li>
        <% when "Balance" %>
          <li class="breadcrumb-item"><%= link_to "Balance", pages_path("balance") %></li>
        <% else %>
          <li class="breadcrumb-item">Other</li>
        <% end %>
        <li class="breadcrumb-item"><%= link_to @subcategory.name, subcategory_path(@subcategory) %></li>
        <li class="breadcrumb-item"><%= @blog.title %></li>
        <div style="position: absolute; right: 0; margin-right: 25px">
          <% if current_user && current_user.admin %>
            <%= link_to 'Edit Blog', edit_blog_path(@blog), class: "color-pink" %>
          <% end %>
        </div> <!-- right -->
      </ol>
    </nav>
</section>
