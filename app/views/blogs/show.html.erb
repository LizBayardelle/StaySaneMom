<div class="frame" style="background-image: url(<%= rails_blob_url(@blog.image) %>)"></div>
<div class="over-frame-text">
  <h1><%= @blog.title %></h1>
  <div class="over-frame-bottom-row text-right">
    <h3>From <%= @blog.category %> Blogs</h3>
  </div> <!-- over-frame-text -->
</div> <!-- over-frame-text -->

<div class="row">
  <div class="container">
    <% if current_user && current_user.admin %>
      <div class="text-right">
        <%= link_to "Edit Blog", edit_blog_path(@blog) %>
      </div>
    <% end %>

    <div class="buffer"></div>

    <h2 class="text-center"><%= @blog.teaser %></h2>

    <%= render "layouts/hr" %>

    <%= @blog.body.html_safe %>
    <h2 class="cta text-center"><%= link_to @blog.cta, rails_blob_url(@blog.pdf), target: "_blank" %></h2>

    <strong>Category:</strong>  <%= @blog.category %>
    <strong>Linked module:</strong>  <%= @blog.linked_module %>
    <strong>Published:</strong>  <%= @blog.published %>
    <strong>Published on:</strong>  <%= @blog.published_on %>
    <strong>User:</strong>  <%= @blog.user %>
    <strong>Image:</strong>  <%= @blog.image %>


    <%= link_to 'Edit', edit_blog_path(@blog) %> |
    <%= link_to 'Back', blogs_path %>
  </div> <!-- page container -->
</div> <!-- row -->
