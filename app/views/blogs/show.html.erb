  <div class="text-center">
    <div class="half-buffer"></div>
    <%= link_to 'Edit', edit_blog_path(@blog) %> |
    <%= link_to 'Back', blogs_path %>
  </div>
  <% end %>
<!-- end admin links -->

<div class="half-buffer"></div>

<!-- freebie -->
