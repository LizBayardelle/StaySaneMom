        <% end %>

        <div class="half-buffer"></div>

      </div> <!-- container -->
    </div> <!-- bg row -->
  <% end %>


  <div class="container">
    <div class="half-buffer"></div>

    <div class="blog-itself col-xs-12">
      <%= raw(@blog.body) %>
    </div>

  </div> <!-- container -->

<!-- admin links -->
