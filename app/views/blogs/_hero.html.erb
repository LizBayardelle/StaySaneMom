<section id="hero-and-header">

  <div class="container pb-5 text-center">
    <h1 class="d-xl-none"><%= @blog.title %></h1>
    <div class="row">

      <div class="col-xl-6 order-xl-1">
        <% if @blog.photo_external %>
          <img class="match-height classy-pic tilt-right" src="<%= @blog.photo_url %>" style="max-width: 100%; max-height: 40vh">
        <% else %>
          <img class="match-height classy-pic tilt-right" src="<%= rails_blob_url(@blog.image) if @blog.image.attached? %>" style="max-width: 100%; max-height: 40vh">
        <% end %>
      </div> <!-- col -->

      <div class="col-xl-6 order-xl-0">
        <h1 class="d-none d-xl-block"><%= @blog.title %></h1>
        <h4 class="text-center mt-4"><%= @blog.teaser %></h4>
        <p class="text-center mt-2"><em>
          Written by <%= link_to user_path(@blog.user) do %>
            <%= @blog.user.first_name %> <%= @blog.user.last_name %>
          <% end %>
          </em>&nbsp; |&nbsp;<em>
          <a href="#comments"><span class="disqus-comment-count" data-disqus-identifier="<%= @blog.id %>" data-disqus-url="<%= polymorphic_url(@blog) %>">See Comments</span></a>
          </em>&nbsp; |&nbsp;<em>
          <% if @blog.published_on %>
            Updated <%= @blog.published_on.in_time_zone("America/Los_Angeles").strftime("%m/%d/%Y")  %>
          <% end %>
        </em></p>
      </div> <!-- col -->

    </div> <!-- row -->


  </div>

</section>