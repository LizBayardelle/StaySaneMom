<div class="to-do-list done">
  <% task.each do |task| %>
    <p>
      <%= link_to uncheck_task_path(task), method: :post, remote: true do %>
        <i class="icon ion-android-checkbox-outline"></i>
      <% end %>
      <%= task.name %>
      <%= link_to task_path(task), method: :delete, remote: true do %>
        <i class="icon ion-close-circled" style="margin-left: 5px"></i>
      <% end %>
    </p>
  <% end %>
</div>
