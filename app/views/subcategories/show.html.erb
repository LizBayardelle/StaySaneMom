<!-- page-specific content -->
  <% title @subcategory.name + " | SSM" %>
  <%= content_for :head do %>
    <meta name="description" content="<%= @subcategory.description %>" />
  <% end %>
<!-- page-specific content -->

<div class="container text-center">
  <h1 class="font-script"><%= @subcategory.name %></h1>
  <p><%= @subcategory.description %></p>
  <h2 class="color-pink"><% if !@subcategory.active %>INACTIVE<% end %></h2>
</div>


<!-- related blogs -->
<% @related = Blog.where(subcategory_id: @subcategory.id, published: true, nondisplayed: false ).where("published_on <= ?", Date.today).order("comments_count DESC") %>
<% if @related != [] %>
  <div class="container">
    <!-- <h2>Blogs on <%#= @subcategory.name %></h2> -->
    <div class="row">
      <% @related.each do |blog| %>
        <%= render partial: "layouts/mdbcard", locals: { blog: blog } %>
      <% end %>
    </div> <!-- row -->
  </div>
<% end %>
<!-- related blogs -->


<%= content_for :additional_js do %>
  <script type="text/javascript">
    $(document).ready(function() {
      $('.height').matchHeight();
      $('.card').matchHeight();
      $('.view').matchHeight();
      $('.card-title').matchHeight();
      $('.card-text').matchHeight();
    });
  </script>
<% end %>
