
<%= simple_form_for(@subcategory) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <div class="form-group">
      <%= f.input :category, label: "Category", input_html: {class: 'browser-default'}, collection: [['House', 'House'], ['Marriage', 'Marriage'], ['Pregnancy', 'Pregnancy'], ['Babies', 'Babies'], ['Toddlers', 'Toddlers'], ['Kids', 'Kids'], ['Teens', 'Teens'], ['Balance', 'Balance']] %>
    </div>
    <%= f.input :name %>
    <%= f.input :description %>
    <div class="form-group">
      <%= f.label "Image" %><br />
      <%= f.file_field :image %>
    </div>
    <%= f.input :active %>

  </div>

  <div class="form-actions text-center">
    <%= f.button :submit, class: "btn btn-outline-danger" %>
  </div>
<% end %>
