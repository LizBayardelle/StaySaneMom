<div class="col-md-6 col-lg-4" style="margin-bottom: 20px">
  <div class="card">
    <div class="view overlay">
      <img class="card-img-top" src="<%= rails_blob_url(blog.image) if blog.image.attached? %>" alt="Card image cap">
      <%= link_to blog do %>
        <div class="mask rgba-white-slight"></div>
      <% end %>
    </div>

    <div class="card-body">
      <h4 class="card-title"><%= link_to blog.title, blog_path(blog), class: "card-title color-" + color.to_s %></h4>
      <p class="card-text">
        <%= blog.teaser %>
        <!-- <br /><span class="disqus-comment-count" data-disqus-identifier="<%#= blog.id %>"><%#= blog.title %></span> -->
      </p>
    </div>

    <div class="rounded-bottom mdb-color bg-solid-<%= color %> text-center pt-3">
      <ul class="list-unstyled list-inline font-small">
        <li class="list-inline-item pr-2 white-text"><i class="fas fa-book-open pr-1"></i><%= blog.category %> (<%= Subcategory.where(id: blog.subcategory_id).first.name %>)</li>
        <li class="list-inline-item pr-2 white-text"><i class="far fa-clock pr-1"></i><%= blog.published_on.in_time_zone("America/Los_Angeles").strftime("%m/%d/%Y") %></li>
        <!--
        <li class="list-inline-item pr-2"><a href="#" class="white-text"><i class="far fa-comments pr-1"></i>12</a></li>
        <li class="list-inline-item pr-2"><a href="#" class="white-text"><i class="fab fa-facebook-f pr-1"> </i>21</a></li>
        <li class="list-inline-item"><a href="#" class="white-text"><i class="fab fa-twitter pr-1"> </i>5</a></li> -->
      </ul>
    </div> <!-- bottom -->
  </div> <!-- card -->
</div> <!-- col -->
