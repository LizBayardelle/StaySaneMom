<div class="col-md-6 col-lg-4" style="margin-bottom: 20px">
  <div class="card">
    <div class="view overlay">
      <%= link_to main_app.meals_path do %><%= image_tag "my-personal-recipe-box-of-meals.jpg", class: "card-img-top", alt: "All your recipes in one place.  Finally." %><% end %>
      <a>
        <div class="mask rgba-white-slight"></div>
      </a>
    </div>

    <div class="card-body">
      <h4 class="card-title"><%= link_to "My Recipe Box", meals_path, class: "card-title color-neutral" %></h4>
      <p class="card-text">Keep track of all your family's favorite meals.  All your recipes can finally live in one place, plus you'll have a list to browse when you can't figure out what's for dinner.</p>
    </div>

    <div class="rounded-bottom mdb-color bg-solid-neutral text-center pt-3">
      <ul class="list-unstyled list-inline font-small">
        <% if current_user %>
          <%= link_to main_app.meals_path do %><li class="list-inline-item pr-2 white-text">You Have <%= pluralize( Meal.where(user_id: current_user.id).count, "Recipe") %></li><% end %>
        <% else %>
          <%= link_to main_app.meals_path do %><li class="list-inline-item pr-2 white-text">Add to Your Recipe Box</li><% end %>
        <% end %>
      </ul>
    </div> <!-- bottom -->
  </div> <!-- card -->
</div> <!-- col -->
