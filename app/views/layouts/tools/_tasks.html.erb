<div class="col-sm-6 col-lg-3" style="margin-bottom: 20px">
  <div class="card">
    <div class="view overlay">
      <%= link_to main_app.tasks_path do %><%= image_tag "house-task-organizer.jpg", class: "card-img-top", alt: "Card image cap" %><% end %>
      <a>
        <div class="mask rgba-white-slight"></div>
      </a>
    </div>

    <div class="card-body">
      <h4 class="card-title"><%= link_to "House Task Organizer", tasks_path, class: "card-title color-neutral" %></h4>
      <p class="card-text">Let's face it, we all wish we could keep a cleaner house.  No one likes coming home to laundry mountain and a dust bunny brigade.  Here you can learn how to keep the chaos at bay.</p>
    </div>

    <div class="rounded-bottom mdb-color bg-solid-neutral text-center pt-3">
      <ul class="list-unstyled list-inline font-small">
        <% if current_user %>
          <%= link_to main_app.tasks_path do %><li class="list-inline-item pr-2 white-text">You Have <%= pluralize( Task.where(user_id: current_user.id, completed: false).count, "Unchecked Task") %></li><% end %>
        <% else %>
          <%= link_to main_app.tasks_path do %><li class="list-inline-item pr-2 white-text">Start Your Task List</li><% end %>
        <% end %>
      </ul>
    </div> <!-- bottom -->
  </div> <!-- card -->
</div> <!-- col -->
