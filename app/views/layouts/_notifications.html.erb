<div class="flash-notice-area">
  <% if flash[:notice] %>
    <div class="alert alert-success" style="margin-top: 40px; margin-bottom: -40px">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash[:notice] %>
    </div>
  <% elsif flash.now[:alert] %>
    <div class="alert alert-danger" style="margin-top: 40px; margin-bottom: -40px">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash.now[:alert] %>
    </div>
  <% elsif flash[:alert] %>
    <div class="alert alert-warning" style="margin-top: 40px; margin-bottom: -40px">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash[:alert] %>
    </div>
  <% end %>
</div>
