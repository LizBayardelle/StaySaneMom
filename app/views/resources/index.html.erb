<!-- page-specific content -->
<% title "Resource Library | SSM" %>
<%= content_for :head do %>
  <meta name="description" content="We moms need all the help we can get. Here's the stockpile of knowledge for our members." />
<% end %>
<!-- page-specific content -->






<% if current_user && current_user.admin %>
  <section class="text-right pb-2 px-5">
    <%= link_to 'Add a New Resource', new_resource_path %>
  </section>
<% end %>

<header>
  <div class="header-frame frame" style="background-image: url(<%= asset_path "free-resource-library.jpg" %>)"><div class="image-overlay image-overlay-white"><div class="inner-frame border-neutral"></div></div></div>

  <div class="over-frame-text">
    <div class="container text-center">
      <div class="buffer"></div>
      <div class="half-buffer"></div>
      <h1>Resource Library</h1>
      <div class="half-buffer"></div>
      <h4>As a member, you have complete access to all the resources in&nbsp;the&nbsp;SSM&nbsp;universe.</h4>
      <div class="half-buffer"></div>
      <h4>Binge away, my pretties!</h4>
    </div> <!-- container -->
    <% if !current_user %>
      <div class="over-frame-bottom-row">
        <div class="container">
          <div class="text-center">
            <div class="half-buffer"></div>
              <%= link_to new_user_registration_path do %><div class="btn my-btn-outline-secondary new-account">Create a Free Account Now</div><% end %>
            <div class="buffer"></div>
          </div> <!-- text center -->
        </div> <!-- container -->
      </div> <!-- over-frame-text -->
    <% end %>
  </div> <!-- over-frame-text -->
</header>

<main class="container-fluid px-5 pt-1">






  <!-- Classic tabs -->
<div class="classic-tabs mx-2 mb-5">

  <ul class="nav" id="myClassicTabShadow" role="tablist">
    <li class="nav-item">
      <a class="nav-link  waves-light active show" id="tab-all" data-toggle="tab" href="#area-all"
        role="tab" aria-controls="area-all" aria-selected="true">All</a>
    </li>
    <li class="nav-item">
      <a class="nav-link  waves-light" id="tab-house" data-toggle="tab" href="#area-house"
        role="tab" aria-controls="area-house" aria-selected="true">House</a>
    </li>
    <li class="nav-item">
      <a class="nav-link waves-light" id="tab-spouse" data-toggle="tab" href="#area-spouse"
        role="tab" aria-controls="area-spouse" aria-selected="false">Spouse</a>
    </li>
    <li class="nav-item">
      <a class="nav-link waves-light" id="tab-kids" data-toggle="tab" href="#area-kids"
        role="tab" aria-controls="area-kids" aria-selected="false">Kids</a>
    </li>
    <li class="nav-item">
      <a class="nav-link waves-light" id="tab-self" data-toggle="tab" href="#area-self"
        role="tab" aria-controls="area-self" aria-selected="false">Self</a>
    </li>
  </ul>

  <div class="tab-content card" id="myClassicTabContentShadow">
    <div class="tab-pane fade active show" id="area-all" role="tabpanel" aria-labelledby="tab-all">
      <%= render partial: "resources/tab_interior", locals: { resources: @resources } %>
    </div>
    <div class="tab-pane fade" id="area-house" role="tabpanel" aria-labelledby="tab-house">
      <%= render partial: "resources/tab_interior", locals: { resources: @house } %>
    </div>
    <div class="tab-pane fade" id="area-spouse" role="tabpanel" aria-labelledby="tab-spouse">
      <%= render partial: "resources/tab_interior", locals: { resources: @spouse } %>
    </div>
    <div class="tab-pane fade" id="area-kids" role="tabpanel" aria-labelledby="tab-kids">
      <%= render partial: "resources/tab_interior", locals: { resources: @kids } %>
    </div>
    <div class="tab-pane fade" id="area-self" role="tabpanel" aria-labelledby="tab-self">
      <%= render partial: "resources/tab_interior", locals: { resources: @self } %>
    </div>
  </div>

</div>
<!-- Classic tabs -->





</main>




<script>
	$(document).ready(function(){
    $('.card-text').matchHeight();
	})
</script>
