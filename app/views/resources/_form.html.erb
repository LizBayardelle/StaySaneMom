
<%= simple_form_for(@resource) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.association :user %>
    <%= f.input :title %>
    <%= f.input :teaser %>
    <%= f.input :freebie_type %>
    <%= f.input :freebie_description %>
    <%= f.input :cta %>
    <%= f.input :convertkit_href %>
    <%= f.input :link_instead %>
    <%= f.input :link_url %>
    <%= f.input :house %>
    <%= f.input :spouse %>
    <%= f.input :kids %>
    <%= f.input :self %>
    <%= f.input :active %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
