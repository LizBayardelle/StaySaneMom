<!-- page-specific content -->
  <% title "Printables | SSM" %>
<!-- page-specific content -->


<% if current_user && current_user.admin %>
  <div class="text-right px-5">
    <%= link_to 'Input a New Printable', new_printable_path %>
  </div> <!-- right -->
<% end %>

<div class="container">
  <h1 class="pt-3 text-center color-pink font-script">The Stay Sane Store</h1>
  <p class="text-center pb-3">We have the goods to cure your crazy.</p>

  <section>
    <div class="row">
      <% @printables.each do |printable| %>
        <%= render partial: 'printables/card', locals: { printable: printable } %>
      <% end %>
    </div>

  </section> <!-- Section: Products v.5 -->


</div> <!-- container -->




<%= content_for :additional_js do %>
  <script type="text/javascript">
    $(document).ready(function() {
      $('.view').matchHeight();
      $('.card-title').matchHeight();
      $('.card-text').matchHeight();
      $('.card').matchHeight();
    });
  </script>
<% end %>
