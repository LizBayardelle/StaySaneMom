<!-- page-specific content -->
  <% title "Kids | SSM" %>
  <%= content_for :head do %>
    <meta name="description" content="The research you need to raise happy, balanced, motivated kids." />
  <% end %>
<!-- page-specific content -->

<h1 class="font-script text-center color-kids">Kids & Parenting</h1>
<div class="half-buffer"></div>


<div class="header-frame frame" style="background-image: url(https://staysanemom.s3-us-west-1.amazonaws.com/raise_balanced_happy_kids.jpg)"><div class="image-overlay-white"><div class="inner-frame border-kids"></div></div></div>
<div class="over-frame-text convert-kit">
  <div class="container text-center">
    <h1>Messy Little Humans</h1>
    <h3>Raise happy, balanced little monsters.</h3>
  </div> <!-- container -->
  <div class="over-frame-bottom-row">
    <div class="container">
      <div class="text-center">
        <div class="half-buffer"></div>
        <a href="#convertkitPopup" class="open-popup-link btn my-btn-outline-secondary hero-button">Click Here for the Secret</a>
        <div class="buffer"></div>
      </div> <!-- text center -->
    </div> <!-- container -->
  </div> <!-- over-frame-bottom-row -->
</div> <!-- over-frame-text -->

<div class="half-buffer d-md-none"></div>

<div class="container">
  <div class="row text-center">
    <% @subcategories.each do |subcategory| %>
      <div class="view view-2 col-6 col-md-4 col-lg-3">
        <div class="sub-photo" style="margin-bottom: 15px; box-shadow: 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23); padding: 3px">
          <%= link_to subcategory_path(subcategory) do %>
            <%= image_tag rails_blob_url(subcategory.image), class: "img-fluid" if subcategory.image.attached? %>
            <div class="mask flex-center waves-effect waves-light rgba-white-light">
              <h4 class="boldest color-black"><%= subcategory.name %></h4>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="container text-center" style="padding: 10px; padding-bottom: 15px">
  <h3>
    <div id="resourcesClick" class="color-kids" style="display: inline-block">Resources</div>&nbsp&nbsp&nbsp|&nbsp&nbsp
    <div id="toolsClick" class="color-kids" style="display: inline-block">Tools</div>&nbsp&nbsp|&nbsp&nbsp
    <div id="blogsClick" class="color-kids" style="display: inline-block">Blogs</div>
  </h3>
</div>

<div class="bg-kids padded" id="resourcesDiv">
  <div class="container padded resource-stripe">
    <h2 class="text-center font-script">Free Parenting Resources</h2>
    <% if current_user %>
      <% @subcategories.each do |subcategory| %>
        <% if Blog.where(subcategory_id: subcategory.id) != [] %>
        <h3><%= link_to subcategory.name, subcategory_path(subcategory) %></h3>
          <% alreadyArray = [] %>
          <% Blog.where(subcategory_id: subcategory.id).each do |blog| %>
            <% if !alreadyArray.include? blog.freebie_filename %>
              <% if blog.freebie_type == "File" %>
                  <%= link_to asset_path(blog.freebie_filename, skip_pipeline: true), target: "_blank" do %><%= blog.freebie_description %><% end %><br />
              <% elsif blog.freebie_type == "Link" %>
                <a href="<%= blog.freebie_filename %>" target="_blank"><%= blog.freebie_description %></a><br />
              <% end %> <!-- if else -->
              <% alreadyArray << blog.freebie_filename %>
            <% end %> <!-- unless already -->
          <% end %> <!-- blog do -->
        <% end %> <!-- if blog with subcategory exists -->
      <% end %> <!-- subcategories each -->
    <% else %>
      <h5 class="text-center">Create a free account for access to the free resource library.</h5>
      <div class="text-center padded">
        <%= link_to new_user_registration_path do %><button class="btn my-btn-outline-secondary">Create an Account</button><% end %>
         or
         <%= link_to new_user_session_path do %><button class="btn my-btn-outline-secondary">Log In</button><% end %>
      </div>
    <% end %>
  </div> <!-- container -->
</div> <!-- bg house -->

<div class="buffer"></div>

<div class="container" id="toolsDiv">
  <h2 class="text-center font-script">Parenting Tools</h2>
  <div class="row tools">
    <%= render "layouts/tools/capsules" %>
    <%= render "layouts/tools/birthdays" %>
    <%#= render "layouts/tools/gifts" %>
  </div> <!-- tools row -->
  <div class="buffer"></div>
</div> <!-- container -->

<h2 class="text-center font-script" id="blogsDiv">Parenting Blogs</h2>

<div class="half-buffer"></div>

<div class="row bg-kids">
  <div class="container">
    <div class="half-buffer"></div>
    <div class="row">
      <% @featured_blogs.each do |blog| %>
        <%= render partial: "layouts/mdbcard", locals: { blog: blog, color: "kids" } %>
      <% end %>
    </div> <!-- row for cards -->
  </div> <!-- container -->
</div> <!-- featured row -->

<div class="half-buffer"></div>

<div class="container">
  <div class="row">
    <% @all_kids_blogs.each do |blog| %>
      <%= render partial: "layouts/mdbcard", locals: { blog: blog, color: "kids" } %>
    <% end %>
  </div> <!-- row -->
</div> <!--  container -->





<!-- form itself -->
<div id="convertkitPopup" class="white-popup mfp-hide">
  <script async data-uid="1832c287ca" src="https://f.convertkit.com/1832c287ca/c10fa015bf.js"></script>
</div>







<%= content_for :additional_js do %>
  <script type="text/javascript">
    $(document).ready(function() {
      $('.card').matchHeight();
      $('.view').matchHeight();
      $('.view-2').matchHeight();
      $('.card-text').matchHeight();
      $('.sub-photo').matchHeight();
      $('.open-popup-link').magnificPopup({
        type:'inline',
        midClick: true // Allow opening popup on middle mouse click. Always set it to true if you don't provide alternative source in href.
      });
      $('.hero-button').click(function() {
          ga('send', 'event', 'Subscription', 'Hero Button Subscription', 'Kids Category Subscription Box');
      });
      $("#resourcesClick").click(function() {
        $('html,body').animate({
            scrollTop: $("#resourcesDiv").offset().top -100 },
            'slow');
      });

      $("#toolsClick").click(function() {
        $('html,body').animate({
            scrollTop: $("#toolsDiv").offset().top -100 },
            'slow');
      });

      $("#blogsClick").click(function() {
        $('html,body').animate({
            scrollTop: $("#blogsDiv").offset().top -100 },
            'slow');
      });
    });  </script>
<% end %>
