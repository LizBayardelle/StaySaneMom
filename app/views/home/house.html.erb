<!-- page-specific content -->
  <% title "House | SSM" %>
  <%= content_for :head do %>
    <meta name="description" content="Get help keeping your house clean, getting organized, and herding your dust bunnies towards extinction." />
  <% end %>
<!-- page-specific content -->

<div class="header-frame frame" style="background-image: url(<%= asset_path "keep-house-clean.jpg" %>)"><div class="image-overlay-white"><div class="inner-frame border-house"></div></div></div>
<div class="over-frame-text convert-kit">
  <div class="container">
    <h1>Clean That House!</h1>
    <h3 class="text-center">No a tornado didn't hit, I just have kids.</h3>
    <div class="half-buffer"></div>
    <div class="text-center">
      <h4 class="text-center padded">Want 5 secret tips to get (and keep) your house&nbsp;clean?</h4>
      <a href="#convertkitPopup" class="open-popup-link btn my-btn-outline-secondary hero-button">Get My Free Tips</a>
    </div> <!-- text center -->
  </div> <!-- container -->
  <div class="over-frame-bottom-row">
    <div class="container">
      <div class="buffer"></div>
    </div> <!-- container -->
  </div> <!-- over-frame-bottom-row -->
</div> <!-- over-frame-text -->

<div class="bg-house padded">
  <div class="container padded resource-stripe">
    <h2 class="text-center font-script">Free Household Resources</h2>
    <% if current_user %>

      <h3>Housecleaning & Maintenance</h3>
      <%= link_to "5 Secret Rules to Get (and Keep) Your House Clean (and Workbook)", asset_path("5_House_Secrets.pdf", skip_pipeline: true), target: "_blank" %>

      <h3>Finances & Budgeting</h3>
      <a href="https://docs.google.com/spreadsheets/d/1HRdOTR-5pEvlUUybTXYbmrZYF5054iEIiXQoV4h7w-4/copy" target="_blank">Yearly Expenses Planner (Google Sheets)</a>

      <h3>Holidays</h3>
      <%= link_to "Thanksgiving Battle Plan (Meal Timing Organizer)", asset_path("Thanksgiving-Battle-Plan.pdf", skip_pipeline: true), target: "_blank" %>

    <% else %>
      <h5 class="text-center">Create a free account for access to the free resource library.</h5>
      <div class="text-center padded">
        <%= link_to new_user_registration_path do %><button class="btn my-btn-outline-secondary">Create an Account</button><% end %>
         or
         <%= link_to new_user_session_path do %><button class="btn my-btn-outline-secondary">Log In</button><% end %>
      </div>
    <% end %>
  </div> <!-- container -->
</div> <!-- bg house -->

<div class="buffer"></div>

<div class="container">

  <div class="recent-blogs">
    <div class="container">
      <h2 class="font-script text-center">Most Popular Household Blogs</h2>

      <div class="row">
      <% @commented_blogs.each do |blog| %>
        <%= link_to blog do %>
          <div class="col-lg-4"><div class="blog-card">
            <% case blog.category %>
            <% when "House" %>
              <div class="house transparent-hover">
                <div class="flag">House</div>
            <% when "Spouse" %>
              <div class="spouse transparent-hover">
                <div class="flag">Spouse</div>
            <% when "Kids" %>
              <div class="kids transparent-hover">
                <div class="flag">Kids</div>
            <% when "Self" %>
              <div class="self transparent-hover">
                <div class="flag">Self</div>
            <% else %>
              <div class="other transparent-hover neutral">
                <div class="flag">General</div>
            <% end %>
                <div class="blog-frame" style="background-image: url(<%= rails_blob_url(blog.image) if blog.image.attached? %>)">
                  <% case blog.category %>
                  <% when "House" %>
                    <div class="image-overlay-house"></div>
                  <% when "Spouse" %>
                    <div class="image-overlay-spouse"></div>
                  <% when "Kids" %>
                    <div class="image-overlay-kids"></div>
                  <% when "Self" %>
                    <div class="image-overlay-self"></div>
                  <% else %>
                    <div class="image-overlay-neutral"></div>
                  <% end %>
                </div>
                <div class="blog-text">
                  <div class="blog-description">
                    <h2><%= blog.title %></h2>
                    <p class="blog-teaser"><%= blog.teaser %><span class="color-neutral" style="padding-left: 5px"><%= blog.cta_read_more + "..." %></span></p>
                  </div> <!-- blog description -->
                  <div class="blog-info">
                    <p class="published-on">
                      <small>
                      <%= pluralize(blog.comments.count, "Comment") %>, Published on <%= blog.published_on.in_time_zone("America/Los_Angeles").strftime("%B %d, %Y") %>
                      <% if current_user && current_user.admin %>
                          <%= link_to edit_blog_path(blog) do %><%= fa_icon "pencil" %><% end %>
                          <%= link_to blog, method: :delete, data: { confirm: 'Are you sure?' } do %><%= fa_icon "remove" %><% end %>
                      <% else %>
                           | <%= link_to "Home", root_path %>
                      <% end %>
                    </small></p>
                  </div> <!-- blog info -->
                </div> <!-- blog-text -->
              </div> <!-- end case div -->
          </div></div> <!-- blog card/col -->
        <% end %>
      <% end %>
    </div> <!-- row -->




    <div class="buffer"></div>


    <h2 class="font-script text-center">Newest House Blogs</h2>
    <div class="row">
      <% @recent_blogs.each do |blog| %>
        <%= link_to blog do %>
          <div class="col-lg-4"><div class="blog-card">
            <% case blog.category %>
            <% when "House" %>
              <div class="house transparent-hover">
                <div class="flag">House</div>
            <% when "Spouse" %>
              <div class="spouse transparent-hover">
                <div class="flag">Spouse</div>
            <% when "Kids" %>
              <div class="kids transparent-hover">
                <div class="flag">Kids</div>
            <% when "Self" %>
              <div class="self transparent-hover">
                <div class="flag">Self</div>
            <% else %>
              <div class="other transparent-hover neutral">
                <div class="flag">General</div>
            <% end %>
              <div class="blog-frame" style="background-image: url(<%= rails_blob_url(blog.image) if blog.image.attached? %>)">
                <% case blog.category %>
                <% when "House" %>
                  <div class="image-overlay-house"></div>
                <% when "Spouse" %>
                  <div class="image-overlay-spouse"></div>
                <% when "Kids" %>
                  <div class="image-overlay-kids"></div>
                <% when "Self" %>
                  <div class="image-overlay-self"></div>
                <% else %>
                  <div class="image-overlay-neutral"></div>
                <% end %>
              </div>
              <div class="blog-text">
                <div class="blog-description">
                  <h2><%= blog.title %></h2>
                  <p class="blog-teaser"><%= blog.teaser %><span class="color-neutral" style="padding-left: 5px"><%= blog.cta_read_more + "..." %></span></p>
                </div> <!-- blog description -->
                <div class="blog-info">
                  <p class="published-on">
                    <small>
                    <%= pluralize(blog.comments.count, "Comment") %>, Published on <%= blog.published_on.in_time_zone("America/Los_Angeles").strftime("%B %d, %Y") %>
                    <% if current_user && current_user.admin %>
                        <%= link_to edit_blog_path(blog) do %><%= fa_icon "pencil" %><% end %>
                        <%= link_to blog, method: :delete, data: { confirm: 'Are you sure?' } do %><%= fa_icon "remove" %><% end %>
                    <% else %>
                         | <%= link_to "Home", root_path %>
                    <% end %>
                  </small></p>
                </div> <!-- blog info -->
              </div> <!-- blog-text -->
            </div> <!-- end case div -->
          </div></div> <!-- blog card/col -->
        <% end %>
      <% end %>
    </div> <!-- row -->
  </div> <!-- recent blogs -->


  <div class="buffer"></div>
  <% if @other_blogs && @other_blogs.count > 0 %>
    <h2 class="text-center font-script">Earlier Blogs on House Stuff</h2>
    <% @other_blogs.each do |blog| %>
      <%= link_to blog, class: "weight-400 color-black color-neutral-hover font-serif" do %>
        <h3 class="color-house font-sans"><%= blog.title %></h3>
        <p><%= blog.teaser %>  <%= link_to blog do %><span class="color-neutral"><%= blog.cta_read_more + "..." %></span><% end %></p>
      <% end %>
    <% end %>
  <% end %>

</div> <!-- page container -->


<!-- form itself -->
<div id="convertkitPopup" class="white-popup mfp-hide">
  <script async data-uid="fcce48a626" src="https://f.convertkit.com/fcce48a626/999d19a7ee.js"></script>
</div>







<script>
  $(document).ready(function() {
    $('.blog-text').matchHeight();
    $('.blog-teaser').matchHeight();
    $('.blog-description').matchHeight();
    $('.blog-info').matchHeight();
    $('.open-popup-link').magnificPopup({
      type:'inline',
      midClick: true // Allow opening popup on middle mouse click. Always set it to true if you don't provide alternative source in href.
    });
    $('.hero-button').click(function() {
        ga('send', 'event', 'Subscription', 'Hero Button Subscription', 'House Category Subscription Box');
    });
  });
</script>
