<div class="container">
  <table class="lined-table">
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.id %></td>
        <td>
          <span style="font-weight: 900"><%= link_to blog.title, blog_path(blog) %></span><br />
          <%= link_to blog.user.first_name + " " + blog.user.last_name, user_path(blog.user) %> (<% if blog.user.contributor %>Contributor of <%= Blog.where(user_id: blog.user.id, published: true).count %> / <%= Blog.where(user_id: blog.user.id).count %>)<% end %><br />
          <%= pluralize(blog.comments_count, "Comment") %><br />
          <% if Subcategory.where(id: blog.subcategory_id) != [] %>
            <span class="color-spouse">In <%= Subcategory.where(id: blog.subcategory_id).first.name %></span><br />
          <% end %>
          <%= link_to edit_blog_path(blog) do %><%= fa_icon "pencil-alt" %><% end %>
          <%= link_to blog, method: :delete, data: { confirm: 'Are you sure?' } do %><%= fa_icon "trash" %><% end %>
        </td>
        <td>
          <% if blog.published %>
            <span style="font-weight: 900" class="color-spouse">Published</span>
          <% else %>
            <span style="font-weight: 900" class="color-self">Not Published</span>
          <% end %><br />
          <% if blog.published_on %>
            Published On: <%= blog.published_on.in_time_zone("America/Los_Angeles").strftime("%B %d, %Y") %><br />
          <% end %>
          Submitted: <%= blog.submitted %><br />
          Approved: <%= blog.approved %>
        </td>
      </tr>
    <% end %>
  </table>
</div> <!-- container -->
