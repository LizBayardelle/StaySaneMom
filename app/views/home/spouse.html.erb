<!-- page-specific content -->
  <% title "Marriage | SSM" %>
  <%= content_for :head do %>
    <meta name="description" content="Before the dirty diapers and sleepless nights, you were actually a couple.  Here's how to maintain a healthy marriage even with kids." />
  <% end %>
<!-- page-specific content -->

<div class="header-frame frame" style="background-image: url(<%= asset_path "keep_marriage_healthy.jpg" %>)"><div class="image-overlay-white"><div class="inner-frame border-spouse"></div></div></div>
<div class="over-frame-text convert-kit">
  <div class="container text-center">
    <h1>Marriage is (Still) Important</h1>
    <h3>Want to learn 3 techniques<br />to instantly get closer to your spouse?</h3>
    <div class="half-buffer"></div>
    <a href="#convertkitPopup" class="open-popup-link btn btn-outline-secondary">Get My Free Tips</a>
  </div> <!-- container -->
  <div class="over-frame-bottom-row">
    <div class="container">
      <div class="text-center">
        <div class="buffer"></div>
      </div> <!-- text center -->
    </div> <!-- container -->
  </div> <!-- over-frame-bottom-row -->
</div> <!-- over-frame-text -->

<div class="bg-spouse padded">
  <div class="container padded resource-stripe">
    <h2 class="text-center font-script">Free Marriage Resources</h2>
    <% if current_user %>

      <h3>Marriage Exercises</h3>
      <%= link_to "168 Questions to Ask Your Partner", asset_path("168-Questions-to-Ask-Your-Partner.pdf", skip_pipeline: true), target: "_blank" %><br />
      <%= link_to "31 Days to Keep the Romance Alive (Printable Card Deck)", asset_path("31-Days-to-Keep-the-Romance-Alive.pdf", skip_pipeline: true), target: "_blank" %>

    <% else %>
      <h5 class="text-center">Create a free account for access to the free resource library.</h5>
      <div class="text-center padded">
        <%= link_to new_user_registration_path do %><button class="btn btn-outline-secondary">Create an Account</button><% end %>
         or
         <%= link_to new_user_session_path do %><button class="btn btn-outline-secondary">Log In</button><% end %>
      </div>
    <% end %>
  </div> <!-- container -->
</div> <!-- bg house -->

<div class="buffer"></div>

<div class="container">

  <div class="recent-blogs">

    <div class="row">
      <% @recent_blogs.each do |blog| %>
        <%= link_to blog do %>
          <div class="col-lg-4"><div class="blog-card">
            <% case blog.category %>
            <% when "House" %>
              <div class="house transparent-hover">
                <div class="flag">House</div>
            <% when "Spouse" %>
              <div class="spouse transparent-hover">
                <div class="flag">Spouse</div>
            <% when "Kids" %>
              <div class="kids transparent-hover">
                <div class="flag">Kids</div>
            <% when "Self" %>
              <div class="self transparent-hover">
                <div class="flag">Self</div>
            <% else %>
              <div class="other transparent-hover neutral">
                <div class="flag">General</div>
            <% end %>
              <div class="blog-frame" style="background-image: url(<%= rails_blob_url(blog.image) if blog.image.attached? %>)">
                <% case blog.category %>
                <% when "House" %>
                  <div class="image-overlay-house"></div>
                <% when "Spouse" %>
                  <div class="image-overlay-spouse"></div>
                <% when "Kids" %>
                  <div class="image-overlay-kids"></div>
                <% when "Self" %>
                  <div class="image-overlay-self"></div>
                <% else %>
                  <div class="image-overlay-neutral"></div>
                <% end %>
              </div>
              <div class="blog-text">
                <h2><%= blog.title %></h2>
                <p><%= blog.teaser %><span class="color-neutral" style="padding-left: 5px"><%= blog.cta_read_more + "..." %></span></p>
                <p class="published-on">
                  <strong>Categories:
                    <%= raw blog.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %>
                  </strong><br />
                  <small>
                  Published on <%= blog.published_on.in_time_zone("America/Los_Angeles").strftime("%B %d, %Y") %> in <%= blog.category %>
                  <% if current_user && current_user.admin %>
                       | <%= link_to 'Edit', edit_blog_path(blog) %> |
                      <%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %>
                  <% else %>
                       | <%= link_to "Home", root_path %>
                  <% end %>
                </small></p>
              </div> <!-- blog-text -->
            </div> <!-- end case div -->
          </div></div> <!-- blog card/col -->
        <% end %>
      <% end %>
    </div> <!-- row -->
  </div> <!-- recent blogs -->


  <div class="half-buffer"></div>
  <% if @other_blogs && @other_blogs.count > 0 %>
    <h4 class="text-center">Older Blogs on Marriage and Spouses</h4>
    <% @other_blogs.each do |blog| %>
      <%= link_to blog, class: "weight-400 color-black color-neutral-hover font-serif" do %>
        <h3 class="color-spouse font-sans"><%= blog.title %></h3>
        <p><%= blog.teaser %>  <%= link_to blog do %><span class="color-neutral font-serif"><%= blog.cta_read_more + "..." %></span><% end %></p>
      <% end %>
    <% end %>
  <% end %>

</div> <!-- page container -->


<!-- form itself -->
<div id="convertkitPopup" class="white-popup mfp-hide">
  <script async data-uid="1b3f810348" src="https://f.convertkit.com/1b3f810348/d61be915f2.js"></script>
</div>







<script>
  $(function() {
    $('.blog-text').matchHeight();
  });

  $('.open-popup-link').magnificPopup({
    type:'inline',
    midClick: true // Allow opening popup on middle mouse click. Always set it to true if you don't provide alternative source in href.
  });
</script>
