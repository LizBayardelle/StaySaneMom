<!-- page-specific content -->
  <% title "The Stay Sane Mom" %>
  <%= content_for :head do %>
    <meta name="description" content="Helping overworked moms keep clean house, a healthy marriage, balanced kids, and stay sane on top of it all." />
  <% end %>
<!-- page-specific content -->






<main class="p-0">

  <section id="hero-image">
    <div class="header-frame frame" style="background-image: url(https://staysanemom.s3-us-west-1.amazonaws.com/stay-sane-mom.jpg)" role="img" aria-label="Overwhelmed mom acting like she's tearing her hair out."><div class="image-overlay-white"><div class="inner-frame border-neutral"></div></div></div>

    <div class="over-frame-text">
      <div class="container text-center">
        <h1 class="color-black">
          Need more sanity?
        </h1>
