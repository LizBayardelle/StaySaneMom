<main class="pt-0">

  <div class="view jarallax" style="height: 600px;">
    <img class="jarallax-img" src="https://staysanemom.s3-us-west-1.amazonaws.com/Categories/1-house-1.jpg" alt="">
    <div class="mask rgba-black-light">
      <div class="container flex-center text-center">
        <div class="row mb-5">
          <div class="col-md-12 wow fadeIn mb-3 color-white">
            <h1 class="dis mb-2 wow fadeInDown font-weight-bold" data-wow-delay="0.3s">
              How to Keep a Clean&nbsp;House
            </h1>
            <h4 class="mb-3 mt-1 font-weight-bold wow fadeIn" data-wow-delay="0.4s">
              No, a tornado didn't come through here, I just have kids.
            </h4>
            <h4 class="mb-3 mt-1 font-weight-bold wow fadeIn" data-wow-delay="0.4s">
              However, no matter overwhelming it is, you can actually have a neat house and kids at the same time.
            </h4>
            <a class="btn btn-neutral btn-lg wow fadeIn" href="#blogs" data-wow-delay="0.4s">See How</a>
            <a class="btn btn-house btn-lg wow fadeIn" href="https://the-stay-sane-mom.ck.page/9fc850b136" target="_blank" data-wow-delay="0.4s">Free Printable Deep Cleaning Checklist</a>
          </div> <!-- col -->
        </div> <!-- row -->
      </div> <!-- container -->
    </div> <!-- mask -->
  </div> <!-- jarallax view -->


  <div class="z-depth-3">
    <div class="container-fluid p-5">
      <div class="row text-center">

        <% @subcategories = Subcategory.where(category: "House", active: true) %>
        <% @subcategories.each do |subcategory| %>
          <div class="view view-2 col-6 col-md-4 col-lg-3">
            <div class="sub-photo z-depth-2 mb-3 p-2">
              <%= link_to subcategory_path(subcategory) do %>
                <%= image_tag rails_blob_url(subcategory.image), class: "img-fluid sub-img" if subcategory.image.attached? %>
                <div class="mask flex-center waves-effect waves-light rgba-white-strong">
                  <h4 class="boldest color-black"><%= subcategory.name %></h4>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>


        <div class="col-md-12 wow fadeIn mb-3 text-center pt-5 py-4">
          <h2 class="h1 mb-2 wow fadeInDown" data-wow-delay="0.3s">House Management Tools</h2>
        </div> <!-- col -->

        <%= render "layouts/tools/tasks" %>
        <%= render "layouts/tools/recipes" %>
        <%= render "layouts/tools/meals" %>


      </div>
    </div> <!-- container -->
  </div> <!-- z depth -->






  <div class="view jarallax text-center">
    <img class="jarallax-img" src="https://staysanemom.s3-us-west-1.amazonaws.com/Categories/1-house-2.jpg" alt="">
    <div class="mask rgba-black-strong">
      <div class="container flex-center text-center">
        <div class="row">
          <div class="col-12 color-white">
            <h2 class="h1 pb-3">Need a Reset?</h2>
            <h4 class="pb-3">
              Our <strong>14 Days to a Clean House</strong> bootcamp takes you through your entire house in two weeks, with step by step instructions.
            </h4>
            <h4 class="pb-3">
              More importantly, once your house is clean, it gives you the secret of how to keep it that way.
            </h4>
            <a class="btn btn-house btn-lg wow fadeIn" href="https://thestaysanemom.teachable.com/p/14-days-to-a-spotless-house" target="_blank" data-wow-delay="0.4s">Fix the Mess</a>
          </div> <!-- col -->
        </div> <!-- row -->
      </div> <!-- container -->
    </div> <!-- mask -->
  </div> <!-- jarallax -->





  <div id="blogs" class="container pb-4">

    <div class="row">  <!--Grid row-->
      <div class="col-md-12 wow fadeIn mb-3 text-center pt-5 py-4">
        <h2 class="h1 mb-2 wow fadeInDown" data-wow-delay="0.3s">Articles on Household Management</h2>
      </div> <!-- col -->

      <% @blogs = Blog.where(published: true, house: true).order("created_at DESC") %>
      <% @blogs.each do |blog| %>
        <%= render partial: "layouts/mdbcard", locals: { blog: blog, color: blog.category.downcase } %>
      <% end %>

    </div> <!--Grid row-->

  </div> <!-- container -->


</main>

<%= content_for :additional_js do %>
  <script>
    $(document).ready(function() {

      // object-fit polyfill run
      objectFitImages();

      /* init Jarallax */
      jarallax(document.querySelectorAll('.jarallax'));

      jarallax(document.querySelectorAll('.jarallax-keep-img'), {
        keepImg: true,
      });

      $("#top-bar").removeClass('bg-solid-neutral');
      $("#top-bar").addClass('bg-solid-house');

      $('.height').matchHeight();
      $('.category-div').matchHeight();
      $('.card').matchHeight();
      $('.view').matchHeight();
      $('.card-text').matchHeight();
      $('.sub-photo').matchHeight();
      $('.sub-img').matchHeight();


    });
  </script>
<% end %>
