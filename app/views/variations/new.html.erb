<div class="container">
  <h1 class="text-center thin uppercase">New <%= Goody.where(id: params[:goody]).first.name %> Variation</h1>

    <%= simple_form_for(@variation) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-inputs">
        <h2>The Basics</h2>
        <div class="row">
          <div class="col-sm-9 form-group">
            <%= f.input :name %>
          </div>
          <div class="col-sm-3 form-group">
            <%= f.input :price %>
          </div>
        </div> <!-- row -->
        <%= f.input :subcategories, label: "Subcategories (Separated by Commas)" %>
        <%= f.input :short_description %>
        <%= f.input :description %>
        <div class="form-group">
          <%= f.label "Product Image" %><br />
          <%= f.file_field :image, multiple: true %>
        </div>
        <%= f.input :new_product %>
        <%= f.input :hot_product %>
        <%= f.input :active %>

        <h2>For Downloadables</h2>
        <%= f.input :downloadable %>
        <div class="form-group">
          <%= f.label "Downloadable File" %><br />
          <%= f.file_field :downloadable_file %>
        </div>

        <h2>For Links (Not Downloads)</h2>
        <%= f.input :link_instead, label: "Link Instead of File" %>
        <div class="form-group ml-5">
          <%= f.input :link_url %>
        </div>

        <h2>For Planners</h2>
        <%= f.input :custom_planner %>
        <%= f.input :build_planner %>
        <%= f.hidden_field :goody_id, value: params[:goody] %>

      </div>

      <div class="text-center form-actions">
        <%= f.submit "The Variation Be Ready", class: "btn btn-danger" %>
      </div>
    <% end %>

  <div class="text-center">
    <div class="half-buffer"></div>
    <%= link_to 'Back', goodies_path %>
  </div> <!-- center -->

</div> <!-- container -->
