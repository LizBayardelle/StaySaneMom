<!-- Card Starts-->
<div class="col-md-4 mb-2">
  <div class="card card-cascade card-ecommerce">
    <div class="view view-cascade overlay">
      <% if goody.images.attached? %>
        <%= image_tag rails_blob_url(goody.images.first), class: "card-img-top" %>
      <% end %>
      <%= link_to goody_path(goody) do %>
        <div class="mask rgba-white-slight"></div>
      <% end %>
    </div>
    <div class="card-body card-body-cascade text-center">
      <a href="" class="text-muted">
        <h5></h5>
      </a>
      <h4 class="card-title">
        <strong>
          <%= link_to goody.name.pluralize(2), goody_path(goody) %>
        </strong>
      </h4>
      <p class="card-text">
        <%= goody.description %><br />
        <% if current_user && current_user.admin %>
          <%= link_to 'Edit', edit_goody_path(goody) %> | <%= link_to 'Destroy', goody, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
      </p>
      <div class="card-footer px-1">
          <% max = 0 %>
          <% min = 1000000 %>
        <% goody.variations.each do |v| %>
          <% if v.price > max %>
            <% max = v.price %>
          <% end %>
          <% if v.price < min %>
            <% min = v.price %>
          <% end %>
        <% end %>
        <span class="float-center">
          From <%= number_to_currency(min, unit: "$", precision: 0) %> to <%= number_to_currency(max, unit: "$", precision: 0) %>
        </span>
        <!-- <span class="float-right">
          <a class="" data-toggle="tooltip" data-placement="top" title="" data-original-title="Quick Look">
            <i class="fas fa-eye ml-3"></i>
          </a>
          <a class="" data-toggle="tooltip" data-placement="top" title="" data-original-title="Add to Wishlist">
            <i class="fas fa-heart ml-3"></i>
          </a>
        </span> -->
      </div>
    </div>
  </div>
</div>
<!-- Card Ends -->
