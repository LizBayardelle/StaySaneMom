
<%= simple_form_for(@meal) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :ready_in_minutes %>
    <%= f.input :image %>
    <%= f.input :gluten_free %>
    <%= f.input :dairy_free %>
    <%= f.input :vegetarian %>
    <%= f.input :vegan %>
    <%= f.input :ingredients %>
    <%= f.input :instructions %>
    <%= f.input :downloaded %>
    <%= f.input :favorite %>
    <%= f.association :user_id %>
    <%= f.input :notes %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
